<!DOCTYPE html>
<html lang="en">
  <%- include(`components/heading.ejs`, {title: 'Club List'}) %>
  <body>
    <div class="container">
      <h1 class="text-center text-muted">Club Table</h1>
      <a href="/home">
        <button class="btn btn-warning">Back</button>
      </a>

      <table class="table">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Division</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((el, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= el.name %></td>
            <td><%= el.division %></td>
            <td><a href="/clubs/<%= el.id %>">Show Players</a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>

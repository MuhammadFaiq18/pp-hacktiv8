<!DOCTYPE html>
<html lang="en">
<%- include(`components/heading.ejs`, {title: 'Show All Players'}) %> 
<body>
    <div class="container">
        <h1 class="text-muted text-center"><%= data.name %> Players List</h1>
    
        <a href="/clubs">
            <button type="button" class="btn btn-warning">Back</button>
        </a>
    
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Position</th>
                    <th>Nationality</th>
                    <th>Rating</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.Players.forEach((el, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= el.name %></td>
                        <td><%= el.age %></td>
                        <td><%= el.position %></td>
                        <td><%= el.nationality %></td>
                        <td><%= ratingConverter(el.rating) %></td>
                        <td>
                            <a href="/clubs/<%= data.id %>/update/<%= el.id %>">Update</a>
                            ||
                            <a href="/clubs/<%= data.id %>/delete/<%= el.id %>">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
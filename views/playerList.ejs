<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1><%= data.name %> Players List</h1>

    <a href="/clubs">
        <button>Back</button>
    </a>

    <table border="1">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Age</th>
                <th>Position</th>
                <th>Nationality</th>
                <th>Rating</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.Players.forEach((el, i) => { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= el.name %></td>
                    <td><%= el.age %></td>
                    <td><%= el.position %></td>
                    <td><%= el.nationality %></td>
                    <td>(<%= el.rating %>) <%= ratingConverter(el.rating) %></td>
                    <td>
                        <a href="/clubs/<%= data.id %>/update/<%= el.id %>">Update</a>
                        ||
                        <a href="/clubs/<%= data.id %>/delete/<%= el.id %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>